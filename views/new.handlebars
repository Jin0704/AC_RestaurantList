<div class="container mt-5" style="display: flexbox; width: 1300px;">
  <div class="row" style="width: 1300px;">
    <div class="col-md-10 col-12 mx-auto" style="width: 1300px;">
      <div class="card-columns">
        <div class="card mb-3">
          <img class="card-img-top" src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg"
            alt="預設圖片">
          <div class="card-body">
            <form action="/restaurants" method="POST">
              <div>
                <label for="title" class="left">名稱：</label>
                <input type="text" placeholder="餐廳名稱" name="name">
              </div>
              <div>
                <label for="title" class="left">類別：</label>
                <input type="text" list="category" placeholder="餐廳類別" name="category">
                <datalist id="category">
                  <option value="中東料理">
                  <option value="日本料理">
                  <option value="義式餐廳">
                  <option value="美式料理">
                  <option value="酒吧">
                  <option value="咖啡廳">
                </datalist>
              </div>
              <div>
                <label for="title" class="left">地點：</label>
                <input type="text" placeholder="餐廳地點" name="location">
              </div>
              <div>
                <label for="title" class="left">電話：</label>
                <input type="text" placeholder="餐廳電話" name="phone">
              </div>
              <div>
                <label for="title" class="left">評分：</label>
                <input type="text" placeholder="評分(1~5分)" name="rating">
              </div>
              <div>
                <label for="title" class="left">評論：</label>
                <textarea name="description" rows="6" cols="40">簡單評論</textarea>
                {{!-- <input type="text" placeholder="簡單評論" name="description"> --}}
              </div>
              <div>
                <label for="title" class="left">圖片連結：(若未填則為預設內容)</label>
                <!--用textarea取代input-->
                <textarea name="image" rows="3"
                  cols="40">https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg</textarea>
                {{!-- <input type="text" placeholder="圖片網址" name="image"
                  value="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg"> --}}
              </div>
              <button type="submit">Create</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>